# ------------------------------------------------------------
# Ports (host -> containers)
# ------------------------------------------------------------
GATEWAY_PORT=8080
GYM_LEADER_PORT=8081
TYPEMATCH_PORT=8082
FUSION_IA_PORT=8000

# ------------------------------------------------------------
# Service base URIs (used by gateway)
# In docker-compose, use service DNS names
# ------------------------------------------------------------
GYMLEADER_URI=http://microservices-gym-leader:8081
TYPEMATCH_URI=http://microservices-typematch:8082
FUSION_URI=http://fusion-ia-api:8000

# ------------------------------------------------------------
# CORS (gateway)
# ------------------------------------------------------------
CORS_ALLOWED_ORIGINS=http://localhost:4200

# ------------------------------------------------------------
# Databases
# ------------------------------------------------------------
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432

REDIS_PORT=6379

# ------------------------------------------------------------
# Fusion IA
# ------------------------------------------------------------
FUSION_RATE_LIMIT_PER_HOUR=100
FUSION_IMAGE_DIR=/app/data/images